{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "generateOptions": {
    "baseDir": "modules"
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [{
      "include": "modules/mail/templates/**/*",
      "watchAssets": true,
      "outDir": "dist/modules/mail/templates"
    }]
  }
}
